<UserControl x:Class="NotesAppUI.Views.UserControls.NoteUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesAppUI.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="Title" Text="{Binding Title}" FontSize="15"
                   FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBlock x:Name="TimeElapsed" FontSize="12" Text="{Binding UpdatedTimeElapsed}"
                   Margin="0,10,0,0" Foreground="DodgerBlue"/>
            <TextBlock x:Name="contentTextBlock" Text="some ranodm text, not important, just to show that its wrapping" 
                   FontSize="12" Foreground="DarkGray" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
